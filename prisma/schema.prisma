generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}


model Student {
  id String @id @default(cuid())
  email String @unique
  enrollment String @unique
  LostItems LostItem[]
  FoundItems FoundItem[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model LostItem {
  id String @id @default(cuid())
  name String
  description String
  image String?
  time DateTime?
  location String
  contactNo BigInt?
  creatorId String
  creator Student @relation(fields: [creatorId],references: [id])
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model FoundItem {
  id String @id @default(cuid())
  name String
  description String
  image String?
  location String
  time DateTime?
  contactNo BigInt?
  creatorId String
  creator Student @relation(fields: [creatorId],references: [id])
}